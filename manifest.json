{
  "manifest_version": 2,
  "name": "Bookmark Click Tracker",
  "version": "1.0",
  "description": "Counts the number of times bookmarks are clicked.",
  "permissions": ["tabs", "bookmarks", "storage","unlimitedStorage", "webNavigation","history"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
  "16": "icon16.png",
  "48": "icon48.png",
  "128": "icon128.png"
  }
}